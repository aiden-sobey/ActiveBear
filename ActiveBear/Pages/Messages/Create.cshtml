    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>SenderId</h2>
            <div class="form-group">
                <label asp-for="Message.SenderId" class="control-label"></label>
                <input asp-for="Message.SenderId" class="form-control" />
                <span asp-validation-for="Message.SenderId" class="text-danger"></span>
            </div>
            <h2>Channel</h2>
            <div class="form-group">
                <label asp-for="Message.Channel" class="control-label"></label>
                <input asp-for="Message.Channel" class="form-control" />
                <span asp-validation-for="Message.Channel" class="text-danger"></span>
            </div>
            <h2>Contents</h2>
            <div class="form-group">
                <label asp-for="Message.Contents" class="control-label"></label>
                <input asp-for="Message.Contents" class="form-control" />
                <span asp-validation-for="Message.Contents" class="text-danger"></span>
            </div>
            <h2>Send Date</h2>
            <div class="form-group">
                <label asp-for="Message.SendDate" class="control-label"></label>
                <input asp-for="Message.SendDate" class="form-control" />
                <span asp-validation-for="Message.SendDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

