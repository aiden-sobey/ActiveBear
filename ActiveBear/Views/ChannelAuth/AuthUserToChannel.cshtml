@model ChannelAuth
@{
    var channel = ViewBag.Channel as Channel;
    var error = ViewBag.Error as string;
}

<div id="error_area">
    @if (error != null)
    {
        <div id="error">@error</div>
    }
</div>

<div id="input_area">
    <h3>Unlock access to: </h3>
    <h3><b>@channel.Title</b></h3><br />

    <form method="post" asp-controller="ChannelAuth" asp-action="AuthUserToChannel">
        <div>
            <input asp-for="HashedKey" placeholder="Channel Key" type="password" />
        </div>

        <div>
            <input type="submit" value="Decrypt" />
        </div>
    </form>
</div>