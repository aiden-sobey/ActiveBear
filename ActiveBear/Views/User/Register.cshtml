@model User
@{}
<div id="input_area">
    <h2>Register</h2><br />

    <form method="post" asp-controller="User" asp-action="Register">
        <div>
            <input asp-for="Name" placeholder="User Name" />
            <span asp-validation-for="Name"></span>
        </div>

        <div>
            <input asp-for="Description" placeholder="Description" />
            <span asp-validation-for="Description"></span>
        </div>

        <div>
            <input asp-for="Password" placeholder="Password"/>
            <span asp-validation-for="Password"></span>
        </div>

        <div>
            <input type="submit" value="Register" />
        </div>
    </form>
</div>