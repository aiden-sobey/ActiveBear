@model User
@{
    ViewData["Title"] = "Secure Chat";
}

<div id="input_area">
    <h3>Log In</h3><br />

    <form method="post" asp-controller="User" asp-action="Login">
        <div>
            <input asp-for="Name" placeholder="User Name" /><br />
            <span asp-validation-for="Name"></span>
        </div>

        <div>
            <input asp-for="Password" placeholder="Password" /><br />
            <span asp-validation-for="Password"></span>
        </div>

        <div>
            <input type="submit" value="Login" />
        </div>
    </form>
</div>
<h5 class="footer">
    New to ActiveBear?
    <a asp-controller="User" asp-action="Register">Register</a>
    or
    <a href="https://github.com/aiden-sobey/ActiveBear">Learn More</a>.
</h5>